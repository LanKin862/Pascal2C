program calculator(input,output);
var
    a, b: integer;
    op: char;
    result: real;

begin
    write('Enter first number: ');
    read(a);
    write('Enter operator (+, -, *, /): ');
    read(op);
    write('Enter second number: ');
    read(b);
    
    if op = '+' then
        result := a + b
    else if op = '-' then
        result := a - b
    else if op = '*' then
        result := a * b
    else if op = '/' then
        result := a / b;
        
    write('Result: ', result)
end.